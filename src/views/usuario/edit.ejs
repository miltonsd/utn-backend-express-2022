<%- include('./../layouts/header.ejs', {title:'Editar usuario'}) -%>
      <section class="jumbotron">
        <div class="container">
          <form class="row g-3 needs-validation" method="POST" action="/api/store" novalidate>
            <div class="col-md-12 py-4">
              <label for="nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" name="nombre" id="nombre" value="<%= personas.nombre %>" required/>
              <input type="hidden" class="form-control" name="id" id="id" value="<%= personas._id %>" required/>
              <input type="text" class="form-control" name="edad" id="edad" value="<%= personas.edad %>" required/>
              <input type="text" class="form-control" name="pais" id="pais" value="<%= personas.pais %>" required/>
            </div>
            <div class="col-12">
              <div class="row justify-content-between">
                <a href="javascript:history.back()" class="btn btn-secondary" name="boton" id="boton">Atr√°s</a>
                <button class="btn btn-primary" type="submit" id="boton">Enviar</button>
              </div>
            </div>
          </form>
        </div>
      </section>
    </main>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script>
      const $boton = document.getElementById("boton");

      boton.addEventListener("click", async (e) => {
        e.preventDefault();

        let id = document.getElementById("id").value;
        let nombre = document.getElementById("nombre").value;
        let edad = document.getElementById("edad").value;
        let pais = document.getElementById("pais").value;

        const data = await update(id, nombre, edad, pais);
        console.log(data);
        if (data.status == 201) {
          alert(data.actualizado.nombre + " agregado correctamente");
          window.location.href = "/";
        } else {
          alert(data.error[0].msg);
        }
      });

      const update = async (id, nombre, edad, pais) => {
        try {
          const request = await fetch("http://localhost:3000/" + id, {
            method: "PATCH",
            body: JSON.stringify({
              nombre,
              edad,
              pais
            }),
            headers: {
              "Content-Type": "application/json",
            },
          });
          const datos = await request.json();
          return datos;
        } catch (error) {
          return error;
        }
      };
    </script>
